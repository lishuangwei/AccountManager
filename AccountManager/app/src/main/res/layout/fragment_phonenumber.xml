<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone"
                />
            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_phone"
                android:layout_marginTop="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mailbox"
                android:layout_marginTop="4dp"
                android:text="用于登录,重置,验证身份"
                />

        </LinearLayout>
    </FrameLayout>

    <Button
        android:id="@+id/action_unbind"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:background="@drawable/bt_border_bg"
        android:text="@string/action_unbind"
        />
    <Button
        android:id="@+id/action_change_phone"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/bt_border_bg"
        android:text="@string/action_change_phone"
        />

</LinearLayout>
